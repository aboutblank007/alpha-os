# AlphaOS 密钥模板
# 复制本文件为 secrets.yaml 并填写凭证
# 切勿将 secrets.yaml 提交到版本控制

database:
  host: localhost
  port: 5432
  name: alphaos
  user: alphaos_user
  password: YOUR_DB_PASSWORD_HERE

zeromq:
  # MT5 VPS 连接信息
  tick_endpoint: tcp://YOUR_VPS_IP:5555
  order_endpoint: tcp://YOUR_VPS_IP:5556

# 可选：外部 API 密钥
apis:
  # 替代数据源
  news_api_key: YOUR_NEWS_API_KEY
  
# MT5 账户（仅参考，实际认证在 EA 内）
mt5:
  broker: YOUR_BROKER_NAME
  account: YOUR_ACCOUNT_NUMBER
  server: YOUR_SERVER_NAME
